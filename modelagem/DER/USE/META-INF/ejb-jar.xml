<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <enterprise-beans>
        <entity>
            <ejb-name>PessoaEJB</ejb-name>
            <home>PessoaHome</home>
            <remote>Pessoa</remote>
            <local-home>LocalPessoaHome</local-home>
            <local>LocalPessoa</local>
            <ejb-class>PessoaBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Long</prim-key-class>
            <reentrant>true</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>PessoaEJB</abstract-schema-name>
            <cmp-field>
                <field-name>nome</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>nomeSocial</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>dataNascimento</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>numeroCadastro</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>sexo</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>cpf</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>dataDeCadastro</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>status</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>statusMotivo</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>statusOutrosMotivos</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>rg</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>orgaoEmissor</field-name>
            </cmp-field>
            <cmp-field>
                <description>Ex.: Rua, Avenida, Alameda, etc.</description>
                <field-name>tipoLogradouro</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>logradouro</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>bairro</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>cidade</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>estado</field-name>
            </cmp-field>
            <primkey-field>numeroCadastro</primkey-field>
        </entity>
        <entity>
            <ejb-name>CuidadorEJB</ejb-name>
            <ejb-class>CuidadorBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>CuidadorEJB</abstract-schema-name>
            <cmp-field>
                <field-name>vinculo</field-name>
            </cmp-field>
        </entity>
        <entity>
            <ejb-name>ColaboradorEJB</ejb-name>
            <ejb-class>ColaboradorBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>ColaboradorEJB</abstract-schema-name>
        </entity>
        <entity>
            <ejb-name>EmailEJB</ejb-name>
            <local-home>LocalEmailHome</local-home>
            <local>LocalEmail</local>
            <ejb-class>EmailBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>true</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>EmailEJB</abstract-schema-name>
            <cmp-field>
                <field-name>email</field-name>
            </cmp-field>
            <primkey-field>email</primkey-field>
        </entity>
    </enterprise-beans>
    <relationships>
        <ejb-relation>
            <ejb-relation-name>Tem</ejb-relation-name>
            <ejb-relationship-role>
                <multiplicity>One</multiplicity>
                <relationship-role-source>
                    <ejb-name>PessoaEJB</ejb-name>
                </relationship-role-source>
                <cmr-field>
                    <cmr-field-name>email</cmr-field-name>
                    <cmr-field-type>java.util.Collection</cmr-field-type>
                </cmr-field>
            </ejb-relationship-role>
            <ejb-relationship-role>
                <multiplicity>Many</multiplicity>
                <cascade-delete/>
                <relationship-role-source>
                    <ejb-name>EmailEJB</ejb-name>
                </relationship-role-source>
            </ejb-relationship-role>
        </ejb-relation>
    </relationships>
</ejb-jar>
